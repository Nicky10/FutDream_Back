generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  firstName     String
  secondName    String?  // Opcional
  firstLastName String
  secondLastName String? // Opcional
  phone        String    @unique
  email        String    @unique
  password     String
  role         Role
  createdAt    DateTime  @default(now())

  // RelaciÃ³n con Booking
  bookings     Booking[]
}


enum Role {
  ADMIN
  CLIENT
}

model Booking {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  date        DateTime
  hour        String
  serviceType String   // ðŸŸ¢ Tipo de servicio (Ej: "futbol_5", "futbol_11", "padel", "bolos")
  status      String
}



enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELED
}

